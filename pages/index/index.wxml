<!--index.wxml-->
<!--天气背景 bg 对应 wxss下的样式-->
<!-- <image src="../../assets/day1.jpg" class="bg"></image> -->
<!-- 背景图随机更换 -->
<image src="https://api.i-meto.com/bing" class="bg"></image>
<view class="container">
  <!--城市天气信息-->
  <view class="currentWeather">
    <view class="city w">{{city}} {{district}}</view>
    <view class="street w">{{street}}</view>
    <view class="temp w">{{tmp}}°</view>
    <view class="weather w">{{txt}} | 空气 {{suggestion_brf}} | 气压 {{pres}}</view>
    <view class="weather w suggestion_txt">{{suggestion_txt}}</view>
  </view>

  <!--天气详情-->
  <view class="weatherDetail">
    <view class="center">
      <view class="w">{{dir}}</view>

      <view wx:if="{{sc == '微风'}}" class="w b f50">微风</view>
      <view wx:else class="w b f50">{{sc}}级</view>
    </view>
    <view class="wline"></view>
    <view class="center">
      <view class="w">相对湿度</view>
      <view class="w b f50">{{hum}}%</view>
    </view>
    <view class="wline"></view>
    <view class="center">
      <view class="w">PM 2.5</view>
      <view class="w b f50">{{pm25}}</view>
    </view>
  </view>
</view>

<view wx:for="{{daily_forecast}}" wx:key="this" wx:for-index="i" wx:for-item="item">
  <view class="horizon forcast">

    <!-- 日期显示判断 -->
    <view class="center" wx:if="{{i>=3}}">{{item.date}}</view>
    <view class="center" wx:else>{{day[i]}}</view>

    <view class="horizon">
      <image class="img" src="../../assets/icons/{{item.cond.code_d}}.png"></image>
      <!-- 白天  -->
      <view class="center" wx:if="{{hour<18}}">{{item.cond.txt_d}}</view>
      <!-- 晚上  -->
      <view class="center" wx:else>{{item.cond.txt_n}}</view>
    </view>
    <view class="center">{{item.tmp.min}}°/ {{item.tmp.max}}°</view>
  </view>
</view>